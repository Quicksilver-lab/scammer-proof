<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Scammer Proof</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header>
      <h1>Scammer Evidence</h1>
    </header>
    <main>
      <section id="images">
        <h2>Images</h2>
        <div class="gallery">
          <!-- Placeholder for images -->
          <% for (let i = 1; i <= 16; i++) { %>
          <img src="/images/image<%= i %>.jpg" alt="Scammer Image <%= i %>" />
          <% } %>
        </div>
      </section>

      <section id="videos">
        <h2>Videos</h2>
        <% for (let i = 1; i <= 2; i++) { %>
        <video controls>
          <source src="/videos/video<%= i %>.mp4" type="video/mp4" />
          Your browser does not support the video tag.
        </video>
        <% } %>
      </section>

      <section id="audio">
        <h2>Voice Messages</h2>
        <% for (let i = 1; i <= 18; i++) { %>
        <audio controls>
          <source src="/audio/voice<%= i %>.opus" type="audio/opus" />
          Your browser does not support the audio tag.
        </audio>
        <% } %>
      </section>

      <section id="chat">
        <h2>WhatsApp Chat</h2>
        <pre>
                <!-- Here you can include the chat text -->
                <%= chatText %>
                
            </pre>
      </section>
    </main>
    <script src="/js/script.js"></script>
  </body>
</html>
